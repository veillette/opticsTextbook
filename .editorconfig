# EditorConfig helps maintain consistent coding styles across various editors
# https://editorconfig.org

root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JavaScript files
[*.{js,mjs}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# BibTeX files
[*.bib]
indent_style = space
indent_size = 2
