{
  "name": "opticstextbook",
  "version": "1.0.0",
  "description": "Optics Textbook built with MyST Markdown.",
  "keywords": [
    "optics",
    "physics",
    "textbook",
    "documentation",
    "scientific writing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/veillette/opticsTextbook"
  },
  "bugs": {
    "url": "https://github.com/veillette/opticsTextbook/issues"
  },
  "homepage": "https://veillette.github.io/opticsTextbook",
  "license": "CC-BY-SA-4.0",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "mystmd": "^1.6.2",
    "sharp": "^0.33.2"
  },
  "scripts": {
    "start": "myst start",
    "export": "myst build -a",
    "checklinks": "myst build --check-links",
    "prebuild": "npm run optimize-images && npm run generate-exports",
    "build": "myst build --html && npm run copy-exports && npm run inject-scripts && npm run setup-pwa",
    "build:no-pwa": "myst build --html && npm run copy-exports",
    "clean": "myst clean",
    "serve": "npx serve _build/html",
    "pdf": "myst build --pdf",
    "docx": "myst build --docx",
    "generate-exports": "npm run pdf",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "copy-exports": "node scripts/build/copy-export-files.js",
    "inject-scripts": "node scripts/build/inject-custom-scripts.js",
    "optimize-images": "node scripts/build/optimize-images.js",
    "generate-icons": "node scripts/build/generate-pwa-icons.js",
    "generate-manifest": "node scripts/build/generate-pwa-manifest.js",
    "setup-pwa": "npm run generate-manifest && node scripts/build/install-pwa-assets.js",
    "lint": "node scripts/validation/lint-markdown.js",
    "lint:fix": "node scripts/validation/lint-markdown.js --fix",
    "lint:quiet": "node scripts/validation/lint-markdown.js --quiet",
    "lint:markdown": "markdownlint-cli2 \"content/**/*.md\" \"*.md\"",
    "lint:markdown:fix": "markdownlint-cli2 --fix \"content/**/*.md\" \"*.md\"",
    "lint:spell": "cspell \"content/**/*.md\" --no-progress",
    "lint:spell:fix": "cspell \"content/**/*.md\" --no-progress --words-only",
    "lint:grammar": "node scripts/validation/check-grammar.js",
    "lint:grammar:suggestions": "node scripts/validation/check-grammar.js --suggestions",
    "fix:directives": "node scripts/transform/fix-directive-syntax.js",
    "fix:directives:dry": "node scripts/transform/fix-directive-syntax.js --dry-run",
    "fix:directives:fences": "node scripts/transform/fix-directive-syntax.js --fences-only",
    "fix:directives:admonitions": "node scripts/transform/fix-directive-syntax.js --admonitions-only",
    "fix:split-refs": "node scripts/transform/fix-split-references.js",
    "fix:split-refs:dry": "node scripts/transform/fix-split-references.js --dry-run",
    "standardize:labels": "node scripts/transform/standardize-labels.js --fix",
    "standardize:labels:check": "node scripts/transform/standardize-labels.js --check",
    "standardize:labels:figures": "node scripts/transform/standardize-labels.js --fix --type figure",
    "standardize:labels:equations": "node scripts/transform/standardize-labels.js --fix --type equation",
    "standardize:figures": "node scripts/transform/standardize-figures.js",
    "standardize:figures:dry": "node scripts/transform/standardize-figures.js --dry-run",
    "images:find-unreferenced": "node scripts/images/find-unreferenced.js",
    "images:find-unreferenced:dry": "node scripts/images/find-unreferenced.js --dry-run",
    "images:clean-unreferenced": "node scripts/images/delete-unreferenced.js",
    "images:clean-unreferenced:dry": "node scripts/images/delete-unreferenced.js --dry-run",
    "images:insert": "node scripts/images/insert-figure.js",
    "validate": "node scripts/validation/validate-all.js",
    "validate:quiet": "node scripts/validation/validate-all.js --quiet",
    "validate:strict": "node scripts/validation/validate-all.js --strict",
    "validate:fix": "node scripts/validation/validate-all.js --fix",
    "validate:references": "node scripts/validation/validate-references.js",
    "validate:references:suggestions": "node scripts/validation/validate-references.js --fix-suggestions",
    "validate:images": "node scripts/validation/validate-images.js",
    "validate:style": "node scripts/validation/validate-style-guide.js",
    "validate:style:quiet": "node scripts/validation/validate-style-guide.js --quiet",
    "validate:style:strict": "node scripts/validation/validate-style-guide.js --strict",
    "validate:alt-text": "node scripts/validation/validate-alt-text.js",
    "validate:alt-text:fix": "node scripts/validation/validate-alt-text.js --fix"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cspell": "^8.17.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "markdownlint-cli2": "^0.20.0",
    "write-good": "^1.0.8"
  }
}
