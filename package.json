{
  "name": "opticstextbook",
  "version": "1.0.0",
  "description": "Advanced Optics Textbook built with MyST Markdown.",
  "keywords": [
    "optics",
    "physics",
    "textbook",
    "documentation",
    "scientific writing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/veillette/opticsTextbook"
  },
  "bugs": {
    "url": "https://github.com/veillette/opticsTextbook/issues"
  },
  "homepage": "https://veillette.github.io/opticsTextbook",
  "license": "CC-BY-SA-4.0",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "mystmd": "^1.6.2",
    "sharp": "^0.33.2"
  },
  "scripts": {
    "start": "myst start",
    "export": "myst build -a",
    "checklinks": "myst build --check-links",
    "prebuild": "npm run optimize-images && npm run generate-exports",
    "build": "myst build --html && npm run copy-exports && npm run inject-scripts && npm run setup-pwa",
    "build:no-pwa": "myst build --html && npm run copy-exports",
    "clean": "myst clean",
    "serve": "npx serve _build/html",
    "pdf": "myst build --pdf",
    "docx": "myst build --docx",
    "generate-exports": "npm run pdf",
    "copy-exports": "node scripts/copy-exports.js",
    "inject-scripts": "node scripts/inject-scripts.js",
    "optimize-images": "node scripts/optimize-images.js",
    "generate-icons": "node scripts/generate-pwa-icons.js",
    "generate-manifest": "node scripts/generate-pwa-manifest.js",
    "setup-pwa": "npm run generate-manifest && node scripts/setup-pwa.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "convert-fences": "node scripts/convert_fences.js",
    "convert-fences:dry": "node scripts/convert_fences.js --dry-run",
    "fix-admonitions": "node scripts/fix_admonitions.js",
    "fix-split-refs": "node scripts/fix_split_equation_refs.js",
    "fix-split-refs:dry": "node scripts/fix_split_equation_refs.js --dry-run",
    "find-unreferenced": "node scripts/find_unreferenced_images_myst.js",
    "find-unreferenced:dry": "node scripts/find_unreferenced_images_myst.js --dry-run",
    "find-unreferenced:python": "python3 scripts/find_unreferenced_images_myst.py",
    "clean-unreferenced": "node scripts/delete_unreferenced_images_myst.js",
    "clean-unreferenced:dry": "node scripts/delete_unreferenced_images_myst.js --dry-run",
    "clean-unreferenced:python": "python3 scripts/delete_unreferenced_images_myst.py",
    "validate-enhanced": "python3 scripts/validate_references_enhanced.py",
    "validate-enhanced-quiet": "python3 scripts/validate_references_enhanced.py --quiet",
    "lint": "node scripts/lint_myst_markdown.js",
    "lint:fix": "node scripts/lint_myst_markdown.js --fix",
    "lint:quiet": "node scripts/lint_myst_markdown.js --quiet",
    "lint:python": "python3 scripts/lint_myst_markdown.py",
    "lint:equations": "python3 scripts/lint_equation_labels.py",
    "lint:equations:fix": "python3 scripts/lint_equation_labels.py --fix",
    "lint:equations:verbose": "python3 scripts/lint_equation_labels.py --verbose"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0"
  }
}
