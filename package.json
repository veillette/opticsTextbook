{
  "name": "opticstextbook",
  "version": "1.0.0",
  "description": "Advanced Optics Textbook built with MyST Markdown.",
  "keywords": [
    "optics",
    "physics",
    "textbook",
    "documentation",
    "scientific writing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/veillette/opticsTextbook"
  },
  "bugs": {
    "url": "https://github.com/veillette/opticsTextbook/issues"
  },
  "homepage": "https://veillette.github.io/opticsTextbook",
  "license": "CC-BY-SA-4.0",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "mystmd": "^1.6.2",
    "sharp": "^0.33.2"
  },
  "scripts": {
    "start": "myst start",
    "export": "myst build -a",
    "checklinks": "myst build --check-links",
    "prebuild": "npm run optimize-images && npm run generate-exports",
    "build": "myst build --html && npm run setup-pwa",
    "build:no-pwa": "myst build --html",
    "clean": "myst clean",
    "serve": "npx serve _build/html",
    "pdf": "myst build --pdf",
    "docx": "myst build --docx",
    "generate-exports": "npm run pdf && npm run docx",
    "optimize-images": "node scripts/optimize-images.js",
    "generate-icons": "node scripts/generate-pwa-icons.js",
    "setup-pwa": "node scripts/setup-pwa.js",
    "find-unreferenced": "python3 scripts/find_unreferenced_images_myst.py",
    "find-unreferenced-dry": "python3 scripts/find_unreferenced_images_myst.py --dry-run",
    "clean-unreferenced": "python3 scripts/delete_unreferenced_images_myst.py",
    "clean-unreferenced-dry": "python3 scripts/delete_unreferenced_images_myst.py --dry-run",
    "validate-enhanced": "python3 scripts/validate_references_enhanced.py",
    "validate-enhanced-quiet": "python3 scripts/validate_references_enhanced.py --quiet",
    "lint": "python3 scripts/lint_myst_markdown.py",
    "lint:fix": "python3 scripts/lint_myst_markdown.py --fix"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
